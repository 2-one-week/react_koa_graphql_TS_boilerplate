{
  "extends": "../tsconfig",
  "compilerOptions": {
    "noEmit": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "baseUrl": ".",
    "outDir": "./dist",
    "types": [
      "@types/jest"
    ],
    "paths": {
        "@/*": ["src/*"],
        "@pages/*" : ["src/pages/*"],
        "@shared/*" : ["src/shared/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}